<div {{ attributes.setAttribute('id', 'pg__c') }}>

  <!-- ______________________ HEADER _______________________ -->

  <header id="header">
    <div class="cog--mq mq-header">
      {% if page.header %}
        <div id="header-region">
          {{ page.header }}
        </div>
      {% endif %}
    </div>
  </header>
  <!-- /header -->

  <!-- ______________________ Primary menu _______________________ -->
  {% if page.primary_menu %}
    <div class="clearfix primary-menu" id="primary-menu">
      <div class="cog--mq mq-primary-menu">
        {{ page.primary_menu }}
      </div>
    </div>
  {% endif %}
  <!-- /primarymenu -->

  <!-- ______________________ Secondary menu _______________________ -->
  {% if page.secondary_menu %}
    <div class="clearfix secondary-menu" id="secondary-menu">
      <div class="cog--mq mq-secondary-menu">
        {{ page.secondary_menu }}
      </div>
    </div>
  {% endif %}
  <!-- /secondarymenu -->

  <!-- ______________________ Breadcrumbs _______________________ -->
  {% if page.breadcrumb %}
    <div class="clearfix breadcrumb" id="breadcrumb">
      <div class="cog--mq mq-breadcrumb">
        {{ page.breadcrumb }}
      </div>
    </div>
  {% endif %}
  <!-- /breadcrumb -->

  <!-- ______________________ MAIN _______________________ -->

  <div class="clearfix" id="main">
    <div class="cog--mq mq-main">

      {% if page.sidebar_first %}
        <aside class="sidebar-first sidebars" id="sidebar-first">
          {{ page.sidebar_first }}
        </aside>
      {% endif %}
      <!-- /sidebar-first -->

      <section id="content">

        {% if breadcrumb or title or messages or tabs or action_links %}
          <div id="content-header">

            {{ breadcrumb }}

            {% if page.highlighted %}
              <div id="highlighted">{{ page.highlighted }}</div>
            {% endif %}

            {{ title_prefix }}

            {% if title %}
              <h1 class="title">{{ title }}</h1>
            {% endif %}

            {{ title_suffix }}
            {{ messages }}
            {{ page.help }}

            {% if tabs %}
              <div class="tabs">{{ tabs }}</div>
            {% endif %}

            {% if action_links %}
              <ul class="action-links">{{ action_links }}</ul>
            {% endif %}

          </div>
          <!-- /#content-header -->
        {% endif %}

        <div id="content-area">
          {{ page.content }}
        </div>

        {{ feed_icons }}

      </section>
      <!-- /content-inner /content -->

      {% if page.sidebar_second %}
        <aside class="sidebar-second sidebars" id="sidebar-second">
          {{ page.sidebar_second }}
        </aside>
      {% endif %}
      <!-- /sidebar-first -->

    </div>
    <!-- /cog--mq -->
  </div>
  <!-- /main -->

  <!-- ______________________ FOOTER _______________________ -->

  {% if page.footer %}
    <footer id="footer">
      <div class="cog--mq mq-footer">
        {{ page.footer }}
      </div>
    </footer>
    <!-- /footer -->
  {% endif %}

</div>
<!-- /page -->
