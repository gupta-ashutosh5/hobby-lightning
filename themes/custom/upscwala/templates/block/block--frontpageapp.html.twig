{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div class="content-wrap-inner flex-content">
      <div class="col-elem-6">
        {{ content._layout_builder.0.first }}
      </div>
      <div class="col-elem-6 banner-image">
        {{ content._layout_builder.0.second }}
      </div>
    </div>
  {% endblock %}
</div>
